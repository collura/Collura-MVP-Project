        app:layout_constraintTop_toBottomOf="@+id/get_network_data"
        app:layout_constraintVertical_bias="0.081" />

    <TextView
        android:id="@+id/tv_network_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="@+id/get_preferences_data"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/get_preferences_data"
        app:layout_constraintTop_toBottomOf="@+id/get_preferences_data" />

    <TextView
